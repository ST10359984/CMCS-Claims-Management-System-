@model IEnumerable<Claim>

@{
    ViewData["Title"] = "HR Claims Dashboard";
}

<h2>HR Claims Dashboard</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No approved claims to manage.</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Month</th>
                <th>Total Hours</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var claim in Model)
            {
                var badgeClass = claim.Status switch
                {
                    "Approved" => "bg-success",
                    "Paid" => "bg-primary",
                    _ => "bg-secondary"
                };
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.UserID</td>
                    <td>@claim.Month.ToString("yyyy-MM")</td>
                    <td>@claim.TotalHours</td>
                    <td>R @claim.TotalAmount.ToString("N2")</td>
                    <td><span class="badge @badgeClass">@claim.Status</span></td>
                    <td>
                        @if(claim.Status == "Approved")
                        {
                            <form asp-action="PayClaim" method="post">
                                <input type="hidden" name="claimId" value="@claim.ClaimID" />
                                <button type="submit" class="btn btn-sm btn-primary">Mark as Paid</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">No action</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="GenerateReport" method="post" class="mt-3">
        <button type="submit" class="btn btn-success">Generate HR Report</button>
    </form>
}
