@model IEnumerable<CMCS__Claims_Management_System_.Models.User>

@{
    ViewData["Title"] = "Lecturers";
}

<h2>Lecturers</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No lecturers found.</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.UserName</td>
                    <td>@lecturer.Email</td>
                    <td>
                        <a asp-action="EditLecturer" asp-route-id="@lecturer.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
