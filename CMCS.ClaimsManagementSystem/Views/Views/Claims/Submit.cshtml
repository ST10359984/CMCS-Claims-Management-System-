@model ClaimSubmissionViewModel

@{
    ViewData["Title"] = "Submit New Claim";
}

<h2>Submit New Claim</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <label asp-for="Month" class="control-label"></label>
            <input asp-for="Month" class="form-control" value="@DateTime.Now.ToString("yyyy-MM")" type="month" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="HourlyRate" class="control-label"></label>
            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" id="HourlyRate" />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label>Total Amount</label>
            <input type="text" id="TotalAmount" class="form-control" readonly />
        </div>
    </div>

    <h4 class="mt-4">Hours Breakdown (Claim Details)</h4>
    <div id="details-container">
        @for (int i = 0; i < Model.Details.Count; i++)
        {
            <div class="row detail-item border p-3 mb-2">
                <div class="col-md-3">
                    <label asp-for="Details[i].Date"></label>
                    <input asp-for="Details[i].Date" class="form-control" type="date" />
                </div>
                <div class="col-md-2">
                    <label asp-for="Details[i].HoursWorked"></label>
                    <input asp-for="Details[i].HoursWorked" class="form-control hoursWorked" type="number" step="0.5" />
                </div>
                <div class="col-md-5">
                    <label asp-for="Details[i].Description"></label>
                    <input asp-for="Details[i].Description" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-center">
                    <button type="button" class="btn btn-danger btn-sm remove-detail">Remove</button>
                </div>
            </div>
        }
    </div>
    <button type="button" id="add-detail" class="btn btn-secondary btn-sm mb-4">Add Another Session</button>

    <h4 class="mt-4">Supporting Documents (PDF/Image/Office Formats Only)</h4>
    <input asp-for="SupportingDocuments" class="form-control" type="file" multiple />
    <small class="form-text text-muted">Max size 5MB per file.</small>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Submit Claim</button>
    </div>

    <div class="form-group mt-3">
        <label>Current Status:</label>
        <input type="text" class="form-control" value="@Model.Status" readonly />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    function updateTotal() {
        let rate = parseFloat(document.getElementById('HourlyRate').value) || 0;
        let total = 0;
        document.querySelectorAll('.hoursWorked').forEach(h => {
            let val = parseFloat(h.value);
            if(!isNaN(val)) total += val;
        });
        document.getElementById('TotalAmount').value = (total * rate).toFixed(2);
    }

    document.getElementById('HourlyRate').addEventListener('input', updateTotal);
    document.getElementById('details-container').addEventListener('input', e => {
        if(e.target.classList.contains('hoursWorked')) updateTotal();
    });

    document.getElementById('add-detail').addEventListener('click', function(){
        const container = document.getElementById('details-container');
        const index = container.children.length;

        const html = `
            <div class="row detail-item border p-3 mb-2">
                <div class="col-md-3">
                    <label for="Details_${index}__Date">Date</label>
                    <input name="Details[${index}].Date" class="form-control" type="date" />
                </div>
                <div class="col-md-2">
                    <label for="Details_${index}__HoursWorked">Hours Worked</label>
                    <input name="Details[${index}].HoursWorked" class="form-control hoursWorked" type="number" step="0.5" />
                </div>
                <div class="col-md-5">
                    <label for="Details_${index}__Description">Description</label>
                    <input name="Details[${index}].Description" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-center">
                    <button type="button" class="btn btn-danger btn-sm remove-detail">Remove</button>
                </div>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
        attachRemoveListeners();
    });

    function attachRemoveListeners() {
        document.querySelectorAll('.remove-detail').forEach(btn => {
            btn.onclick = function() {
                if(document.querySelectorAll('.detail-item').length > 1){
                    this.closest('.detail-item').remove();
                    reindexDetails();
                    updateTotal();
                } else alert("You must have at least one session detail.");
            }
        });
    }

    function reindexDetails() {
        document.querySelectorAll('#details-container .detail-item').forEach((item, idx) => {
            item.querySelectorAll('input').forEach(input => {
                if(input.name) input.name = input.name.replace(/Details\[\d+\]/, `Details[${idx}]`);
            });
        });
    }

    attachRemoveListeners();
    updateTotal();
</script>
}
